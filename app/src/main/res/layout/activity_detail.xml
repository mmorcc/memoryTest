<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/header_in"
        layout="@layout/header"></include>
    <LinearLayout
        android:id="@+id/tab"
        android:layout_below="@id/header_in"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/newHouse"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="新房装修"
            android:textColor="#730D30" />
        <TextView
            android:id="@+id/oldHouse"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="旧房翻新"
            android:textColor="#730D30" />
    </LinearLayout>
    <ScrollView
        android:layout_below="@id/tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/adminTab"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_gravity="center_vertical"
            android:src="@drawable/house"
            android:layout_height="200dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="户型:"
                android:textColor="#730D30" />
            <EditText
                android:layout_weight="1"
                android:id="@+id/name"
                android:layout_width="0dp"
                android:textColor="@color/status_bar_color"
                android:layout_height="match_parent"
                android:gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="房屋的面积:"
                android:textColor="#730D30" />
            <EditText
                android:layout_weight="1"
                android:id="@+id/size"
                android:layout_width="0dp"
                android:textColor="@color/status_bar_color"
                android:layout_height="match_parent"
                android:gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="房屋的地址:"
                android:textColor="#730D30" />
            <EditText
                android:layout_weight="1"
                android:id="@+id/des"
                android:layout_width="0dp"
                android:textColor="@color/status_bar_color"
                android:layout_height="match_parent"
                android:gravity="center"
                />
        </LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="设计师:"
            android:textColor="#730D30" />
        <EditText
            android:layout_weight="1"
            android:id="@+id/dName"
            android:layout_width="0dp"
            android:textColor="@color/status_bar_color"
            android:layout_height="match_parent"
            android:gravity="center"
            />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="点赞数:"
                android:textColor="#730D30" />
            <ImageView
                android:id="@+id/zan"
                android:src="@drawable/love"
                android:layout_width="30dp"
                android:layout_height="30dp"></ImageView>
            <TextView
                android:id="@+id/dLove"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="0"
                android:textColor="#730D30" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="留言:"
                android:textColor="#730D30" />
            <EditText
                android:layout_weight="1"
                android:id="@+id/message_et"
                android:layout_width="0dp"
                android:textColor="@color/status_bar_color"
                android:layout_height="match_parent"
                android:gravity="center"
                />
            <Button
                android:id="@+id/save"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="保存"
                android:textColor="#730D30" />
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/diaries_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>

</RelativeLayout>